{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "out",
		"lib": [
			"es6",
			"DOM"
		],
		"typeRoots": [
			"node_modules/@types"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"jsx": "react",
		"strictNullChecks": true,
		"esModuleInterop": true,
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"docs"
	]
}
